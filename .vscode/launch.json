{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Debug with LLDB",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/rbtree",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "logging": {
                "engineLogging": true,
                "trace": true,
                "traceResponse": true
            },
            "sourceFileMap": {
                "/path/to/your/source/files": "${workspaceFolder}"
            },
            "targetArchitecture": "arm64",
            "preLaunchTask": "build",
            "compilerPath": "/usr/bin/clang++",
            "cStandard": "c11",
            "cppStandard": "c++11",
            "compilerArgs": ["-O0", "-g"]
        }
    ]
}